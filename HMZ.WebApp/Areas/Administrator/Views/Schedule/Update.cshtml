<div class="post d-flex flex-column-fluid" id="kt_post">
    <!--begin::Container-->
    <div id="kt_content_container" class="container">
        <!--begin::Card-->
        <div class="card">
            <!--begin::Card header-->
            <div class="card-header border-0 pt-6">
                <!--begin::Card title-->
                <div class="card-title">
                    <!--begin::Search-->
                    <div class="d-flex align-items-center position-relative my-1">
                        <h3>Cập nhập thời khóa biểu</h3>
                    </div>
                    <!--end::Search-->
                </div>
                <!--begin::Card title-->
                <!--begin::Card toolbar-->
                <div class="card-toolbar">

                    </a>
                </div>
                <!--end::Card toolbar-->
            </div>
            <!--end::Card header-->
            <!--begin::Card body-->
            <div class="card-body pt-0">
                <div class="row">
                    <div class="form-group">
                        <label for="">Chọn mã lớp</label>
                        <select name="roomId" class="form-control">
                            <option value="">Chọn lớp</option>
                            @if (ViewBag.ClassRooms != null && ViewBag.ClassRooms.Count > 0)
                            {
                                @foreach (var item in ViewBag.ClassRooms)
                                {
                                    <option value="@item.Id">@item.Name</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="">Tiết</label>
                        <input type="text" class="form-control" name="time">
                    </div>
                    <div class="form-group">
                        <label for="">Ngày</label>
                        <input type="text" class="form-control" name="day">
                    </div>
                    <div class="form-group">
                        <label for="">Tuần</label>
                        <input type="text" class="form-control" name="week">
                    </div>
                    <div class="form-group mt-2">
                        <button id="saveData" class="btn btn-primary">Hoàn thành</button>
                    </div>
                </div>
            </div>
            <!--end::Card body-->
        </div>
        <!--end::Card-->
    </div>
    <!--end::Container-->
</div>

@section Javascript {
    <script>
        $(document).ready(function () {
            const id = window.location.pathname.split('/')[4];
            console.log(id);
            loadData(id);
            $('#saveData').click(function () {
                saveData(id);
            })
        })
        // Save data
        function saveData(id) {
            const time = $('input[name="time"]').val();
            const date = $('input[name="day"]').val();
            const week = $('input[name="week"]').val();
            const roomId = $('select[name="roomId"]').val();

            const data = {

                time: time,
                date: date,
                week: week,
                roomId: roomId,
            }
            $.ajax({
                url: '/Administrator/Schedule/Update/' + id + '',
                type: 'POST',
                data: JSON.stringify(data),
                contentType: 'application/json',
                success: function (res) {
                    if (res.success) {
                        toastr.success("Cập nhật thành công");
                        setTimeout(() => {
                            window.location.href = '/Administrator/Schedule';
                        }, 1000);
                    }
                    else {
                        toastr.error(res.errors.join('<br/>'));
                    }
                }
            })
        }
        // Load data
        function loadData(id) {
            $.ajax({
                url: '/Administrator/Schedule/GetById/' + id,
                type: 'POST',
                success: function (res) {
                    console.log(res);
                    if (res.success) {
                        $('input[name="time"]').val(res.entity.time);
                        $('input[name="day"]').val(res.entity.day);
                        $('input[name="week"]').val(res.entity.week);
                        $('select[name="roomId"]').val(res.entity.roomId);
                    } else {
                        toastr.error(res.errors.join('<br/>'));
                    }
                }
            })
        }
    </script>
}
