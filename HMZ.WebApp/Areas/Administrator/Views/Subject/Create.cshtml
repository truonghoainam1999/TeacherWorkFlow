<div class="post d-flex flex-column-fluid" id="kt_post">
    <!--begin::Container-->
    <div id="kt_content_container" class="container">
        <!--begin::Card-->
        <div class="card">
            <!--begin::Card header-->
            <div class="card-header border-0 pt-6">
                <!--begin::Card title-->
                <div class="card-title">
                    <!--begin::Search-->
                    <div class="d-flex align-items-center position-relative my-1">
                        <h3>Thêm mới bộ môn</h3>
                    </div>
                    <!--end::Search-->
                </div>
                <!--begin::Card title-->
                <!--begin::Card toolbar-->
                <div class="card-toolbar">
                    
                    </a>
                </div>
                <!--end::Card toolbar-->
            </div>
            <!--end::Card header-->
            <!--begin::Card body-->
            <div class="card-body pt-0">
               <div class="row">
                    <div class="form-group">
                        <label for="">Tên bộ môn</label>
                        <input type="text" class="form-control" name="name">
                    </div>
                    <div class="form-group">
                        <label for="">Mô tả ngắn</label>
                        <textarea name="description" class="form-control" id="" rows="2"></textarea>
                    </div>
                    <div class="form-group">
                        <label for="">Chọn khoa</label>
                        <select name="department" class="form-control">
                            <option value="">Chọn khoa</option>
                            @if(ViewBag.Departments != null && ViewBag.Departments.Count > 0){
                                @foreach(var item in ViewBag.Departments){
                                    <option value="@item.Id">@item.Name</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="form-group mt-2">
                        <button id="saveData" class="btn btn-primary">Hoàn thành</button>
                    </div>
               </div>
            </div>
            <!--end::Card body-->
        </div>
        <!--end::Card-->
    </div>
    <!--end::Container-->
</div>

@section Javascript {
    <script>
    $(document).ready(function () {
        $('#saveData').click(async function () {
            const data = {
                name: $('input[name="name"]').val(),
                description: $('textarea[name="description"]').val(),
                departmentId: $('select[name="department"]').val(),
            };
            console.log(data);
            // ajax
          await  $.ajax({
                url: '/Administrator/Subject/Create',
                type: 'POST',
                data: JSON.stringify(data),
                contentType: 'application/json',
                success: function (res) {
                    console.log(res);
                    if (res.success) {
                        Swal.fire({
                            title: 'Thành công',
                            text: 'Thêm mới bộ môn thành công',
                            icon: 'success',
                            confirmButtonText: 'OK'
                        }).then((result) => {
                            if (result.isConfirmed) {
                                    window.location.href = '/Administrator/Subject';
                            }
                        })
                    }
                    else {
                        Swal.fire({
                            title: 'Lỗi',
                            text: res.errors.join(' \n'),
                            icon: 'error',
                            confirmButtonText: 'OK'
                        })
                    }
                },
                error: function (err) {
                    console.log(err);
                }
            })
        });
       
    });

    </script>
}
