<div class="post d-flex flex-column-fluid" id="kt_post">
    <!--begin::Container-->
    <div id="kt_content_container" class="container">
        <!--begin::Card-->
        <div class="card">
            <!--begin::Card header-->
            <div class="card-header border-0 pt-6">
                <!--begin::Card title-->
                <div class="card-title">
                    <!--begin::Search-->
                    <div class="d-flex align-items-center position-relative my-1">
                        <h3>Cập nhập</h3>
                    </div>
                    <!--end::Search-->
                </div>
                <!--begin::Card title-->
                <!--begin::Card toolbar-->
                <div class="card-toolbar">

                </div>
                <!--end::Card toolbar-->
            </div>
            <!--end::Card header-->
            <!--begin::Card body-->
            <div class="card-body pt-0">
                <div class="row">
                    <div class="form-group">
                        <label for="">Tên lớp học</label>
                        <input type="text" class="form-control" name="name">
                    </div>

                    <div class="form-group mt-2">
                        <button id="saveData" class="btn btn-primary">Hoàn thành</button>
                    </div>
                </div>
            </div>
            <!--end::Card body-->
        </div>
        <!--end::Card-->
    </div>
    <!--end::Container-->
</div>

@section Javascript {
<script>
    $(document).ready(function () {
        const id = window.location.pathname.split('/')[4];
        console.log(id);
        getData(id);
        $('#saveData').click(async function () {
            const data = {
                id: id,
                name: $('input[name="name"]').val(),
            };
            console.log(data);
            // ajax
            await $.ajax({
                url: '/Administrator/ClassRoom/Update/'+id,
                type: 'POST',
                data: JSON.stringify(data),
                contentType: 'application/json',
                success: function (res) {
                    console.log(res);
                    if (res.success) {
                        Swal.fire({
                            title: 'Cập nhập công',
                            text: 'Cập nhập thành công',
                            icon: 'success',
                            confirmButtonText: 'OK'
                        }).then((result) => {
                            if (result.isConfirmed) {
                                window.location.href =
                                    '/Administrator/ClassRoom';
                            }
                        })
                    } else {
                        Swal.fire({
                            title: 'Lỗi',
                            text: res.message,
                            icon: 'error',
                            confirmButtonText: 'OK'
                        })
                    }
                },
                error: function (err) {
                    console.log(err);
                }
            })
        });
    });

    function getData(id) {
        $.ajax({
            url: '/Administrator/ClassRoom/GetById/' + id + '',
            type: 'POST',
            success: function (res) {
                console.log(res);
                if (res.success) {
                    $('input[name="code"]').val(res.entity.code);
                    $('input[name="name"]').val(res.entity.name);
                } else {
                    Swal.fire({
                        title: 'Lỗi',
                        text: res.message,
                        icon: 'error',
                        confirmButtonText: 'OK'
                    })
                }
            },
            error: function (err) {
                console.log(err);
            }
        })
    }
</script>
}
